################################
# Frontend (.env.local) values #
################################

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (replace with your own project)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Backend URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8787

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-me-in-production

# Stripe (optional; leave blank if not using billing yet)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PRICE_CREATOR=
NEXT_PUBLIC_STRIPE_PRICE_PRO=

# Social OAuth placeholders â€“ configure in provider consoles
